<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arsh.lastfmclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".presentation.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LastFMClient">
        <activity
            android:name=".presentation.search.SearchArtistActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.albumdetails.AlbumDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.album.AlbumActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>